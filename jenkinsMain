pipeline {
  agent {label 'ubuntu'}

  environment {
    AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')     // Secret text
    AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key') // Secret text
  }

  stages {
    stage('Terraform') {
      steps {
        sh '''
          terraform init
          terraform apply -auto-approve
        '''
      }
    }
  }
}
