pipeline {
  agent {label "ubuntu"}

  environment {
    AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')
    AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
  }

  stages {
    stage('Terraform Init (Auto-Migrate Backend)') {
      steps {
        sh '''
          # Detect whether state already exists in S3 by trying to init with migration
          terraform init -migrate-state -input=false -reconfigure || {
            echo "Fallback to normal init without migration"
            terraform init -input=false -reconfigure
          }
        '''
      }
    }

    stage('Terraform Apply') {
      steps {
        sh 'terraform apply -auto-approve'
      }
    }
  }
}
